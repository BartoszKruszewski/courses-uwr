@model IEnumerable<WebApplication1.Models.Student>

<h2>Students</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Surname</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Edit", "Student", new { id = student.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Student", new { id = student.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Student")">Add New</a>

